{% extends 'base.html.twig' %}

{% block title %}Categorie list{% endblock %}

{% block body %}
<div class="container">
  <h1>Catégories</h1>
    {% for categorie in categories %}
        <a class="btn btn-primary btn-categorie" href="{{path('show_categorie', {'id':categorie.id})}}">{{categorie}}</a>
    {% endfor %}
    {% if app.user %}
    <div class="add-form">
    <h2>Ajouter une categorie</h2>
    <form method="POST" action="{{ path('add_categorie') }}">
      <div class="mb-3">
        <label for="nom" class="form-label">Nom Catégorie</label>
        <input class="form-control" type="text" min="1" max="50" name="nom" id="nom"/>
      </div>
      <button type="submit" name="submit" class="btn btn-primary">ajouter</button>
    </form>
    </div>
    {% endif %}

</div>
{% endblock %}
